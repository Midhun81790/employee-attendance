# Production Environment Variables Template
# Copy this to .env.production and update values

NODE_ENV=production
PORT=10000

# MongoDB Atlas Connection (Replace with your Atlas URI)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/attendanceDB?retryWrites=true&w=majority

# Admin Credentials (Change these!)
ADMIN_EMAIL=admin@yourcompany.com
ADMIN_PASSWORD=SecurePassword123!

# Session Secret (Generate a strong random key)
SESSION_SECRET=your-super-secure-session-secret-key-here

# Optional: Trust Proxy (for HTTPS deployment)
TRUST_PROXY=true
