                };

                navigator.geolocation.getCurrentPosition(
                    (position) => {
                        console.log('✅ Mobile GPS successful (low accuracy)');
                        handleLocationSuccess(position);
                    },
                    (error) => {
                        console.log('� Low accuracy GPS failed, trying high accuracy...');
                        tryHighAccuracyMobileGPS();
                    },
                    mobileOptions
                );
            }

            // High accuracy mobile GPS fallback
            function tryHighAccuracyMobileGPS() {
                const highAccuracyOptions = {
                    enableHighAccuracy: true,
                    timeout: 30000, // Longer timeout for high accuracy
                    maximumAge: 60000 // 1-minute cached location
                };

                navigator.geolocation.getCurrentPosition(
                    (position) => {
                        console.log('✅ Mobile high accuracy GPS successful');
                        handleLocationSuccess(position);
                    },
                    (error) => {
                        console.log('📱 All GPS methods failed, showing manual entry');
                        handleLocationError(error);
                    },
                    highAccuracyOptions
