            // Show initial getting location message with immediate manual option
            updateLocationCard("Getting your location...", "Please allow location access when prompted. If stuck on this screen, make sure you're using HTTPS and location permissions are enabled.", "loading");

            // Detect mobile device for optimized settings
            function isMobileDevice() {
                return /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
            }

            // Alternative mobile detection methods
            function isDefinitelyMobile() {
                return (
                    /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent) ||
                    ('ontouchstart' in window) ||
                    (navigator.maxTouchPoints > 0) ||
                    (window.screen.width <= 768)
                );
            }

            const mobile = isDefinitelyMobile();
            console.log('Device type:', mobile ? '📱 Mobile' : '💻 Desktop');
            console.log('User agent:', navigator.userAgent);
            console.log('Touch support:', 'ontouchstart' in window);
            console.log('Screen width:', window.screen.width);

            // For mobile devices, try IP-based location first, then GPS
            if (mobile) {
                console.log('📱 Mobile detected - trying IP-based location first...');
                tryIPLocation().then(ipLocation => {
                    if (ipLocation) {
                        console.log('✅ IP-based location successful:', ipLocation);
                        handleLocationSuccess({
                            coords: {
                                latitude: ipLocation.lat,
                                longitude: ipLocation.lng,
                                accuracy: 1000 // IP location is less accurate
                            }
                        });
                        return;
                    }
                    // If IP location fails, try GPS with mobile-optimized settings
                    tryMobileGPS();
                }).catch(() => {
                    console.log('IP location failed, trying GPS...');
                    tryMobileGPS();
                });
            } else {
