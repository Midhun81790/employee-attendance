                );
            }
        }

        // Fallback simple location detection
        function useSimpleLocationDetection() {
            console.log('🔄 Using simple location detection fallback...');
            
            const isDevelopment = window.location.hostname === 'localhost' || window.location.hostname === '127.0.0.1';
            
            if (isDevelopment) {
                console.log('🔧 Development mode detected - using default location');
                setTimeout(() => {
                    const defaultPosition = {
                        coords: {
                            latitude: 16.4889184,
                            longitude: 79.8856714,
                            accuracy: 50
                        }
                    };
                    handleLocationSuccess(defaultPosition);
                    
                    // Show development notice
                    const devNotice = document.createElement('small');
                    devNotice.className = 'text-warning';
                    devNotice.innerHTML = '<br><i class="fas fa-code"></i> Development Mode - Using Default Location';
                    const coordDiv = document.getElementById('coordinates');
                    if (coordDiv) {
                        coordDiv.appendChild(devNotice);
                    }
                }, 1000);
                return;
            }

            // Production fallback - try basic GPS
            const basicOptions = {
                enableHighAccuracy: true,
                timeout: 15000,
                maximumAge: 300000 // 5 minutes
            };

            navigator.geolocation.getCurrentPosition(
                (position) => {
                    console.log('✅ Basic GPS successful');
                    handleLocationSuccess(position);
                },
                (error) => {
                    console.log('❌ Basic GPS failed, trying low accuracy');
                    
                    // Try with low accuracy
                    const lowAccuracyOptions = {
                        enableHighAccuracy: false,
                        timeout: 30000,
                        maximumAge: 600000 // 10 minutes
                    };

                    navigator.geolocation.getCurrentPosition(
                        (position) => {
                            console.log('✅ Low accuracy GPS successful');
                            handleLocationSuccess(position);
                        },
                        (finalError) => {
                            console.log('❌ All GPS methods failed');
                            showLocationError(
                                "GPS location failed",
                                "Please ensure location services are enabled in your browser and device settings."
                            );
                        },
                        lowAccuracyOptions
                    );
                },
                basicOptions
            );
        }

        // Get user location (keeping for compatibility)
        function getUserLocation() {
            console.log('⚠️ getUserLocation called - redirecting to robust detection');
            initializeRobustLocation();
        }
            console.log('Starting getUserLocation...');
            
            if (!navigator.geolocation) {
