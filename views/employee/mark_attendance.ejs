            locationTimeout = setTimeout(() => {
                showLocationError(
                    "Location detection timed out",
                    "We could not detect your location within 20 seconds. Please check your browser's location permissions and try refresh."
                );
            }, 20000);

            try {
                // Initialize Google Maps detector
                const detector = new GoogleMapsLocationDetector({
                    defaultLocation: {
                        latitude: companyLocation.latitude,
                        longitude: companyLocation.longitude,
                        address: "Company Location"
                    },
                    gpsTimeout: 15000
                });

                // Show mobile-specific message
                const isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
                if (isMobile) {
                    updateLocationCard(
                        "📱 Mobile GPS Detection", 
                        "Using Google Maps for accurate mobile location. This may take up to 30 seconds. Please wait...", 
                        "loading"
                    );
                }

                // Detect location using Google Maps
                const locationData = await detector.detectLocation();
                
                if (locationTimeout) clearTimeout(locationTimeout);
                console.log('✅ Google Maps location detection successful:', locationData);
                
                // Create position object for existing code compatibility
                const position = {
                    coords: {
                        latitude: locationData.latitude,
                        longitude: locationData.longitude,
                        accuracy: locationData.accuracy || 50
                    },
                    address: locationData.address,
                    method: locationData.method,
                    deviceType: locationData.deviceType
                };
                
                handleLocationSuccess(position);
                
                // Show detection method details
                const methodElement = document.createElement('small');
                methodElement.className = 'text-success';
                methodElement.innerHTML = `
                    <br><i class="bi bi-check-circle"></i> Method: ${locationData.method}
                    <br>Device: ${locationData.deviceType === 'mobile' ? '📱 Mobile' : '💻 Desktop'}
                    <br>Address: ${locationData.address}
                    <br>Accuracy: ±${Math.round(locationData.accuracy)}m
                `;
                
                const coordDiv = document.getElementById('coordinates');
                if (coordDiv) {
                    coordDiv.appendChild(methodElement);
                }
                
            } catch (error) {
                if (locationTimeout) clearTimeout(locationTimeout);
                console.error('❌ Google Maps location detection failed:', error);
                showLocationError(
                    "Unable to detect your location",
